<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="@color/dokk1_blue"
    tools:context="dk.teamawesome.studdydokky.HelloActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/studiedokk1_logo_transparent_white"
        android:layout_marginLeft="96dp"
        android:layout_marginRight="96dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Velkommen som studerende pÃ¥ DOKK1"
        android:textStyle="bold"
        android:textSize="19dp"
        android:id="@+id/textView"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcome_next_btn"
        android:background="@color/dokk1_blue"
        android:src="@drawable/ic_arrow_forward_24dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
